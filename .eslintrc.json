{
  "env": {
    "browser": false,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "multi-line"],
    "no-unused-vars": ["error"],
    "no-console": "off"
  }
}

